<%= link_to 'Home', root_path %>

<h1>List of Users</h1>

<% if @users.blank? %>
  <p style = "color:red"> User not found </p>

<% else %>
  <div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th>User id</th>
          <th>Email address</th>
          <th>is admin?</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td><%= user.email %></td>
            <td><%= user.admin %></td>
              <td><%= link_to 'Show', admin_show_user_path(user) %></td>
              <td><%= link_to 'Destroy', admin_destroy_user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<br>
<% end %>

<br>

